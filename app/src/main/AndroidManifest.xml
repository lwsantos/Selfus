<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.lwsantos.selfus">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.AlbumListaActivity"
            android:label="@string/title_activity_album_lista"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.AlbumCreateActivity"
            android:label="@string/title_activity_albuns_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.AlbumAddPhotoActivity"
            android:label="@string/title_activity_albuns_add_photo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.AlbumFotosActivity"
            android:label="@string/title_activity_album_fotos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.FotoDetalheActivity"></activity>
    </application>

</manifest>